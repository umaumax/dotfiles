#
# Prompt
#

# Set the prompt theme to load.
# Setting it to 'random' loads a random theme.
# Auto set to 'off' on dumb terminals.
zstyle ':prezto:module:prompt' theme 'sorin'

# Set the working directory prompt display length.
# By default, it is set to 'short'. Set it to 'long' (without '~' expansion)
# for longer or 'full' (with '~' expansion) for even longer prompt display.
# zstyle ':prezto:module:prompt' pwd-length 'long'

# my extension for prompt-pwd of sorin theme
function prompt-pwd() {
  setopt localoptions extendedglob

  local current_pwd="${PWD/#$HOME/~}"
  local ret_directory

  local disable_abbr_flag=0
  if [[ ${#current_pwd} -le 32 ]]; then
    disable_abbr_flag=1
  fi

  dirs=("${(@s[/])current_pwd}")
  local i=0
  local n=${#dirs[@]}
  local abbr_flag=0
  for dir in "${dirs[@]}"; do
    ((i++))
    local suffix='/'
    if [[ $i ==  $((n - 0)) ]]; then
      suffix=''
    fi
    # wanring color if not under $HOME dir
    if [[ $i == 1 ]] && [[ "$dir" == "" ]]; then
      printf "$RED"
    fi
    # emphasize git repo dir
    target_dir_slice=("${dirs[@]:0:$i}")
    target_dir=${(j:/:)target_dir_slice}
    if [[ -d ${target_dir/#\~/$HOME}/.git ]]; then
      if [[ $abbr_flag == 0 ]]; then
        printf "${GREEN}${dir}${BLUE}${suffix}"
      else
        printf "${GREEN}${dir}${BLUE}${suffix}"
      fi
      continue
    fi
    # omit directory
    if [[ $disable_abbr_flag == 0 ]] && [[ $i -gt 2 ]] && [[ $i -le $((n - 2)) ]]; then
      if [[ $abbr_flag == 0 ]]; then
        printf ""
      fi
      printf "üìÅ/"
      abbr_flag=1
      continue
    fi
    if [[ $abbr_flag == 1 ]]; then
      abbr_flag=0
      printf ""
    fi

    printf "${dir}${suffix}"
  done
}

