{
    "title": "For Vim",
    "rules": [{
        "description": "Command + Semicolon to ESC",
        "manipulators": [{
                "from": {
                    "key_code": "semicolon",
                    "modifiers": {
                        "mandatory": [
                            "left_command"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [{
                        "key_code": "escape"
                    },
                    {
                        "key_code": "japanese_eisuu"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "semicolon",
                    "modifiers": {
                        "mandatory": [
                            "right_command"
                        ],
                        "optional": [
                            "any"
                        ]
                    }
                },
                "to": [{
                        "key_code": "escape"
                    },
                    {
                        "key_code": "japanese_eisuu"
                    }
                ],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "escape"
                },
                "to": [{
                        "key_code": "escape"
                    },
                    {
                        "key_code": "japanese_eisuu"
                    }
                ],
                "type": "basic"
            }
        ]
    }]
}
