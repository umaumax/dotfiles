{
  "explorer.confirmDragAndDrop": false,
  // "editor.snippetSuggestions": "top",
  "emmet.showSuggestionsAsSnippets": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.copyWithSyntaxHighlighting": false,
  "window.zoomLevel": -1,
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 3,
  "editor.cursorStyle": "line",
  "editor.minimap.maxColumn": 80,
  "editor.minimap.showSlider": "always",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#404040",
    "editor.selectionHighlightBackground": "#f002f044",
    "tab.activeBorder": "#2266ff",
    "tab.unfocusedActiveBorder": "#000000",
    "editor.findMatchBorder": "#FDFF0CCC"
  },
  "workbench.startupEditor": "none",
  "editor.rulers": [80, 160, 240, 320],
  "files.insertFinalNewline": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.showExitAlert": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.cursorSmoothCaretAnimation": true,
  // for windows
  // "editor.mouseWheelScrollSensitivity": 15,
  // for Mac OS X
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.smoothScrolling": true,
  "editor.formatOnSave": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.codeLens": false
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "matklad.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "[ahk]": {
    "files.encoding": "utf8bom",
    "editor.formatOnSave": true
  },
  "[powershell]": {
    "files.encoding": "utf8bom",
    "editor.formatOnSave": true
  },
  "files.associations": {
    "*.txt": "markdown"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "search.exclude": {
    "**/node_modules/*/**": true
  },
  "files.exclude": {
    "**/*.exe": true,
    "**/*.meta": true
  },
  // "remote.SSH.remotePlatform": {
  // "ip address": "linux"
  // },
  // this settings is only for integrated terminal not for global vscode app
  // "terminal.integrated.env.osx": {
  // "PATH": "${env:PATH}:${env:$HOME}/.dotnet:/usr/local/bin/:/opt/homebrew/bin/"
  // },
  "omnisharp.useGlobalMono": "always",
  "omnisharp.monoPath": "/opt/homebrew/opt/mono/",
  "gitlens.hovers.changesDiff": "hunk",
 "gitlens.codeLens.enabled": false,
  "autofix.dictionary": [
    {
      "languages": ["*"],
      "words": {
        "forcus": "focus"
      }
    },
    {
      "languages": ["c","cpp"],
      "words": {
        ";;": "::",
        "; ": ": ",
        "\\.\\.": "->"
      }
    }
    {
      "languages": ["rust"],
      "words": {
        ";;": "::",
        "; ": ": ",
        "\\+>": "=>"
      }
    }
  ],
  "auto-correct.dictionary": [
    {
      "languages": ["*"],
      "words": {
        "warn": "WARN:",
        "todo": "TODO:",
        "note": "NOTE:",
        "forcus": "focus",
        "flaot": "float",
        "stuct": "struct",
        "pravite": "private",
        "{publci,pubcli}": "{public}",
        "hte": "the",
        "filed": "field",
        "mispell": "misspell",
        "mispelled": "misspelled",
        "{despa,sepe}rat{e,es,ed,ing,ely,ion,ions,or}": "{despe,sepa}rat{}"
      }
    }
  ],
  "change-case.default": [
    "camelCase",
    "PascalCase",
    "snake_case",
    "param-case",
    "CONST_CASE"
  ],
  "cSpell.ignoreRegExpList": ["０-９Ａ-Ｚａ-ｚ[亜-熙纊-黑ぁ-んァ-ヶ]+"],
  "cSpell.words": ["hoge", "fuga", "piyo", "infile", "outfile"],
  // disable to auto complete Japanese
  "AllAutocomplete.whitespace": "[^\\w\\-_\\$\\u0080-\\uFFFF]+|[\"']+|[亜-熙ぁ-んァ-ヶ]+",
  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "https://www.plantuml.com/plantuml",
  "python.languageServer": "Pylance",
  "plantuml.commandArgs": [],
  "git.ignoreMissingGitWarning": true,
  "remote.SSH.remotePlatform": {
  }
}
